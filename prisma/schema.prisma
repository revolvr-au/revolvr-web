// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(uuid())
  userEmail String
  imageUrl  String
  caption   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: One post has many Likes
  Like Like[]
}

model Like {
  id        String   @id @default(uuid())
  postId    String
  userEmail String
  createdAt DateTime @default(now())

  // Relation: Many Likes belong to One Post
  post Post @relation(fields: [postId], references: [id])

  // Prevent a user from liking the same post twice
  @@unique([postId, userEmail])
}

model RevolvrItem {
  id        String        @id @default(uuid())
  name      String
  notes     String?
  status    RevolvrStatus @default(NEW)
  value     Int?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum RevolvrStatus {
  NEW
  ACTIVE
  WON
  LOST
}
