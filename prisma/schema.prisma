generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model Follow {
  id             String   @id @default(uuid())
  followerEmail  String
  followingEmail String
  createdAt      DateTime @default(now())

  @@unique([followerEmail, followingEmail])
  @@index([followerEmail])
  @@index([followingEmail])
  @@schema("public")
}

model Comment {
  id        String   @id @default(uuid())
  postId    String
  userEmail String
  body      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId, createdAt(sort: Desc)])
  @@index([userEmail, createdAt(sort: Desc)])
  @@schema("public")
}


model Post {
  id        String   @id @default(uuid())
  userEmail String
  imageUrl  String
  caption   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mediaType String   @default("image")

  likes    Like[]
  media    PostMedia[]
  comments Comment[]   // <-- add this line

  @@schema("public")
}


model StripeEvent {
  id        String   @id
  type      String
  createdAt DateTime @default(now())

  @@schema("public")
}

model Like {
  id        String   @id @default(uuid())
  postId    String
  userEmail String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, userEmail])
  @@index([postId])
  @@schema("public")
}

model PostMedia {
  id        String   @id @default(dbgenerated("(gen_random_uuid())::text"))
  postId    String
  type      String
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([postId])
  @@index([postId, order])
  @@schema("public")
}

model RevolvrItem {
  id        String        @id @default(uuid())
  createdAt DateTime      @default(now())
  notes     String?
  status    RevolvrStatus @default(NEW)
  updatedAt DateTime      @updatedAt
  value     Int?
  name      String

  @@schema("public")
}

model UserCredits {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  email     String   @unique
  boosts    Int      @default(0)
  tips      Int      @default(0)
  spins     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("public")
}

model CreatorBalance {
  creatorEmail     String   @id
  totalEarnedCents Int      @default(0)
  availableCents   Int      @default(0)
  updatedAt        DateTime @updatedAt

  @@schema("public")
}

model SupportLedger {
  id            String        @id @default(cuid())
  creatorEmail  String
  viewerEmail   String?
  kind          SupportKind
  source        SupportSource
  targetId      String?
  units         Int           @default(1)
  currency      String        @default("AUD")
  grossCents    Int           @default(0)
  creatorCents  Int           @default(0)
  platformCents Int           @default(0)
  createdAt     DateTime      @default(now())

  @@index([creatorEmail])
  @@index([viewerEmail])
  @@index([targetId])
  @@index([creatorEmail], map: "support_ledger_creator_idx")
  @@index([kind], map: "support_ledger_kind_idx")
  @@index([targetId], map: "support_ledger_target_idx")
  @@index([creatorEmail, kind, createdAt(sort: Desc)], map: "supportledger_creator_kind_createdat_idx")
  @@index([kind, createdAt(sort: Desc)], map: "supportledger_kind_createdat_idx")
  @@index([kind, targetId], map: "supportledger_kind_target_idx")
  @@index([targetId, kind], map: "supportledger_target_kind_idx")
  @@index([viewerEmail, kind, targetId], map: "supportledger_viewer_kind_target_idx")
  @@schema("public")
}

model Payment {
  id                    String   @id
  stripeEventId         String   @unique
  stripePaymentIntentId String
  stripeSessionId       String?
  creatorId             String
  sessionId             String?
  type                  String
  amountGross           Int
  amountCreator         Int
  amountPlatform        Int
  currency              String
  status                String
  createdAt             DateTime @default(now())

  @@schema("public")
}

model CreatorPayout {
  id               String   @id @default(uuid())
  creatorId        String
  amount           Int
  stripeTransferId String
  status           String
  createdAt        DateTime @default(now())

  @@schema("public")
}

model StripeCheckoutReceipt {
  id            String   @id @default(cuid())
  sessionId     String   @unique @map("session_id")
  paymentIntent String?  @map("payment_intent")
  eventId       String?  @map("event_id")
  livemode      Boolean  @default(false)
  amountTotal   Int?     @map("amount_total")
  currency      String?
  status        String?
  paymentStatus String?  @map("payment_status")
  customerEmail String?  @map("customer_email")
  metadata      Json?
  raw           Json?
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([paymentIntent])
  @@index([customerEmail])
  @@index([createdAt])
  @@map("stripe_checkout_receipts")
  @@schema("public")
}

model CreatorProfile {
  id                           String        @id @default(cuid())
  email                        String        @unique
  displayName                  String
  handle                       String?       @unique
  bio                          String?       @db.Text
  avatarUrl                    String?       @map("avatar_url") @db.Text
  payoutShare                  Int           @default(45)
  status                       CreatorStatus @default(ACTIVE)
  createdAt                    DateTime      @default(now()) @map("created_at")
  updatedAt                    DateTime      @updatedAt @map("updated_at")
  stripeAccountId              String?       @map("stripe_account_id")
  stripeOnboardingStatus       String        @default("not_started") @map("stripe_onboarding_status")
  payoutCurrency               String        @default("aud") @map("payout_currency")
  stripeChargesEnabled         Boolean       @default(false) @map("stripe_charges_enabled")
  stripePayoutsEnabled         Boolean       @default(false) @map("stripe_payouts_enabled")
  isVerified                   Boolean       @default(false) @map("is_verified")
  verifiedSince                DateTime?     @map("verified_since") @db.Timestamptz(6)
  stripeCustomerId             String?       @map("stripe_customer_id")
  stripeSubscriptionId         String?       @unique(map: "creatorprofile_stripe_subscription_id_key") @map("stripe_subscription_id")
  verificationPriceId          String?       @map("verification_price_id")
  verificationStatus           String        @default("inactive") @map("verification_status")
  verificationCurrentPeriodEnd DateTime?     @map("verification_current_period_end") @db.Timestamptz(6)
  blueTickStatus               String        @default("inactive") @map("blue_tick_status")
  blueTickSubId                String?       @map("blue_tick_sub_id")
  blueTickCustomerId           String?       @map("blue_tick_customer_id")
  blueTickCurrentPeriodEnd     DateTime?     @map("blue_tick_current_period_end") @db.Timestamptz(6)
  blueTickCancelAtPeriodEnd    Boolean       @default(false) @map("blue_tick_cancel_at_period_end")
  creatorTermsAccepted         Boolean       @default(false) @map("creator_terms_accepted")
  creatorTermsAcceptedAt       DateTime?     @map("creator_terms_accepted_at") @db.Timestamptz(6)
  creatorTermsVersion          String?       @map("creator_terms_version")

  @@index([blueTickSubId], map: "creatorprofile_blue_tick_sub_id_idx")
  @@map("CreatorProfile")
  @@schema("public")
}

enum RevolvrStatus {
  NEW
  ACTIVE
  WON
  LOST

  @@schema("public")
}

enum CreatorStatus {
  ACTIVE
  DISABLED

  @@schema("public")
}

enum SupportKind {
  TIP
  BOOST
  SPIN
  REACTION
  VOTE

  @@schema("public")
}

enum SupportSource {
  FEED
  LIVE

  @@schema("public")
}

enum creator_status {
  pending
  active
  suspended

  @@schema("public")
}
