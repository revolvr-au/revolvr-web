// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model RevolvrItem {
  id        String         @id @default(uuid())
  name      String
  notes     String?
  status    RevolvrStatus  @default(NEW)
  value     Int?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @default(now()) @updatedAt

}

enum RevolvrStatus {
  NEW
  ACTIVE
  WON
  LOST
}
